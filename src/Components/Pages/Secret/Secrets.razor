@page "/secrets"

@using BlazorSecretManager.Components.Pages.Secret.ViewModels
@using BlazorSecretManager.Entities
@using BlazorSecretManager.Services.Secrets.Abstracts

@inherits MudComposite.ViewComponents.MudListViewComponent<Secret, SecretSearchModel, ISecretListViewModel>

<PageTitle>Secrets</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraLarge">
    <MudPaper Elevation="0" Style="padding: 10px;" >
        <MudStack Class="d-flex justify-end flex-grow-1 gap-4" Row="true" @onkeypress="this.ViewModel.SearchKeyUp">
            <MudTextField T="string" Label="Title" @bind-Value="this.ViewModel.SearchModel.Title" Clearable="true"/>
            <MudTextField T="string" Label="Description" @bind-Value="this.ViewModel.SearchModel.Description" Clearable="true"/>
        </MudStack>
        <br/>
        <MudPaper Class="d-flex justify-end flex-grow-1 gap-4" Elevation="0">
            <MudButton StartIcon="@Icons.Material.Filled.Search" Variant="Variant.Filled" Size="Size.Small" Color="Color.Info" OnClick="this.ViewModel.ReloadServerData">Search</MudButton>
            <MudButton StartIcon="@Icons.Material.Filled.Create" Variant="Variant.Filled" Size="Size.Small" Color="Color.Info" OnClick="@(() => this.ViewModel.Save(new Secret()))">New</MudButton>
        </MudPaper>
    </MudPaper>

    <br/>
    
    <MudDataGrid T="Secret"
                 ServerData="this.ViewModel.ServerReload"
                 Dense="true"
                 Filterable="false"
                 SortMode="SortMode.None"
                 Height="960px"
                 RowStyleFunc="this.ViewModel.RowStyleFunc"
                 RowClick="this.ViewModel.DataGridRowClick"
                 @ref="_dataGrid">
        <Columns>
            <PropertyColumn Property="m => m.Id"/>
            <PropertyColumn Property="m => m.Title"/>
            <PropertyColumn Property="m => m.Description"/>
            <PropertyColumn Property="m => m.CreatedAt"/>
            <PropertyColumn Property="m => m.UpdatedAt"/>
            <TemplateColumn>
                <CellTemplate>
                    <MudStack Row="true">
                        <MudTooltip Text="update" Placement="Placement.Top">
                            <MudIconButton Icon="@Icons.Material.Filled.Update" Color="Color.Info" Variant="Variant.Filled" OnClick="() => this.ViewModel.Save(context.Item)"/>    
                        </MudTooltip>
                        <MudTooltip Text="copy secret api url" Placement="Placement.Top">
                            <MudIconButton Icon="@Icons.Material.Filled.ContentCopy" Color="Color.Info" Variant="Variant.Filled" OnClick="() => GetSecretUrl(context.Item.Id)"/>    
                        </MudTooltip>
                        <MudTooltip Text="remove" Placement="Placement.Top">
                            <MudIconButton Icon="@Icons.Material.Filled.Delete" Color="Color.Error" Variant="Variant.Filled" OnClick="() => this.ViewModel.Remove(context.Item)"/>    
                        </MudTooltip>
                    </MudStack>
                </CellTemplate>
            </TemplateColumn>
        </Columns>
        <PagerContent>
            <MudDataGridPager T="Secret" pa />
        </PagerContent>        
    </MudDataGrid>
</MudContainer>

@inject ISecretService SecretService
@inject IJSRuntime JSRuntime
@inject ISnackbar Snackbar
@code {
    Secret _selectedItem;
    MudDataGrid<Secret> _dataGrid;

    protected override void OnViewAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            this.ViewModel.SetUp(this._dataGrid);
        }
    }

    async Task GetSecretUrl(int id)
    {
        var url = await this.SecretService.GetSecretUrl(id);
        await JSRuntime.InvokeVoidAsync("copyToClipboard", url);
        Snackbar.Add("The URL has been copied", Severity.Success);
    }
}